<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hrh.shake"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.VIBRATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.hrh.shaketorch.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.hrh.shaketorch.About" >
        </activity>
        <activity android:name="com.hrh.shaketorch.Help" >
        </activity>
        <activity android:name="com.hrh.screentorch.ScreenTorch" >
        </activity>
        <activity
            android:name="com.hrh.shaketorch.ActivityPreferences"
            android:configChanges="keyboardHidden|orientation|screenLayout|screenSize"
            android:label="@string/preference_activity_name"
            android:theme="@android:style/Theme" >
        </activity>

        <service
            android:name="com.hrh.shaketorch.ShakeService"
            android:enabled="true" />

        <activity
            android:name="com.hrh.shaketorch.ShakeActivity"
            android:label="@string/title_activity_shake"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>