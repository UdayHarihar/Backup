<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_title"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="bottom">

    <TextView
        android:id="@+id/min_value"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/backlightsetting"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backlightcontrol"
        android:padding="15dp"
        android:text="50%" />

    <TextView
        android:id="@+id/max_value"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/backlightsetting"
        android:layout_below="@+id/backlightsetting"
        android:layout_marginTop="18dp"
        android:text="Set BackLight of the App"
        android:visibility="invisible" />

    <SeekBar
        android:id="@+id/backlightcontrol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/max_value"
        android:layout_below="@+id/min_value"
        android:layout_margin="10px"
        android:layout_marginTop="116dp"
        android:max="100"
        android:padding="10dp"
        android:progress="50"
        android:visibility="visible" />

    <TextView
        android:id="@+id/current_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/backlightsetting"
        android:layout_alignBottom="@+id/backlightsetting"
        android:layout_centerHorizontal="true"
        android:text="@string/brightness" />

</RelativeLayout>